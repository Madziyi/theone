{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
   "skipLibCheck": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["react", "react-dom", "vite/client"],
  },
  "include": ["src"]
}
